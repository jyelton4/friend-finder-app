<div class="container">

    <nav>
        <div class="nav-wrapper green lighten-2">
            <a href="#" class="brand-logo">Survey Questions</a>
        </div>
    </nav>

    <form class="col s12">
        <div class="row">
            <div class="input-field col s12">
                <input placeholder="Placeholder" id="name" type="text" class="validate" required="">
                <label for="first_name">Your name: </label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input placeholder="Placeholder" id="photo-link" type="text" class="validate" required="">
                <label for="last_name">Link to photo of you: </label>
            </div>
        </div>
        <div id="survey-form-elements">
            {{#each questions}}
            <div class="question-header">Question #{{this.id}} -- {{this.question}}</div>
            <div class="input-field col s12 green lighten-3">
                <select id="q{{this.id}}">
                    <option value="" disabled selected>Choose your option</option>
                    <option value="1">1 (Strongly Disagree)</option>
                    <option value="2">2 (Agree)</option>
                    <option value="3">3 (Neutral)</option>
                    <option value="3">4 (Disagree)</option>
                    <option value="3">5 (Strongly Agree)</option>
                </select>
                {{!-- <label>Question #{{this.id}} -- {{this.question}}</label> --}}
            </div>
            {{/each}}
        </div>
        <button class="btn waves-effect waves-light" type="button">Submit</button>
    </form>

</div>

<div id="matchModal" class="modal">
    <div class="modal-content">
        <p></p>
        <img src="" alt="match-photo" class="responsive-img">
    </div>
</div>

<div id="formValModal" class="modal">
    <div class="modal-content">
        <p>You must populate all fields to submit survey...</p>
    </div>
</div>
 